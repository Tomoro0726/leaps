# Sakura Internet High-Power Dok Environment Variables
# さくらインターネット 高火力Dok用環境変数

# Sakura Dok API Token
# 高火力DokのAPIトークン（コントロールパネルから取得）
SAKURA_API_TOKEN=your_sakura_api_token_here

# Database connection string (PostgreSQL)
# データベース接続文字列
# Format: postgresql://username:password@hostname:port/database
DATABASE_URL=postgresql://user:password@your-db-host.example.com:5432/leaps_db

# Vercel Blob Storage URL (base URL without trailing slash)
# Vercel Blob StorageのベースURL（末尾のスラッシュなし）
STORAGE_URL=https://your-project.public.blob.vercel-storage.com

# Vercel Blob Storage access token
# Vercel Blob Storageアクセストークン
BLOB_READ_WRITE_TOKEN=vercel_blob_rw_XXXXXXXXXXXXX

# Container Registry (for pushing Docker images)
# コンテナレジストリ（Dockerイメージのプッシュ先）
CONTAINER_REGISTRY=your-registry.example.com/your-project

# GPU Configuration
# GPU設定
GPU_TYPE=A100        # Options: A100, V100, T4
GPU_COUNT=1

# Resource Configuration
# リソース設定
CPU_CORES=8
MEMORY_SIZE=32Gi

# Optional: Container name prefix
# オプション: コンテナ名のプレフィックス
CONTAINER_PREFIX=leaps-worker
